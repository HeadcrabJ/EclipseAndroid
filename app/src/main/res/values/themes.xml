<resources>
	
	<style name="Theme.Eclipse" parent="Theme.Material3.DayNight">
		<item name="android:statusBarColor">@color/eclipse_main</item>
		<item name="android:navigationBarColor">@color/eclipse_main</item>
	</style>

	<style name="Theme.Eclipse.FullScreen" parent="Theme.Material3.DayNight.NoActionBar">
		<item name="android:statusBarColor">@color/eclipse_main</item>
		<item name="android:navigationBarColor">@color/eclipse_main</item>
	</style>

	<style name="Theme.Eclipse.Splash" parent="Theme.Eclipse.FullScreen">
		<item name="android:windowBackground">@drawable/splash_screen</item>
	</style>

	<style name="Theme.Eclipse.Button" parent="Widget.Material3.Button">
		<item name="shapeAppearanceOverlay">@style/Theme.Eclipse.ShapeAppearance</item>
		<item name="android:textColor">#fff</item>
	</style>

	<style name="Theme.Eclipse.Button.Block" parent="Widget.Material3.Button.TextButton">
		<item name="android:textColor">@color/eclipse_main</item>
		<item name="android:insetTop">0dp</item>
		<item name="android:insetBottom">0dp</item>
		<item name="shapeAppearanceOverlay">@style/Theme.Eclipse.ShapeAppearance.Block</item>
	</style>

	<style name="Theme.Eclipse.ShapeAppearance">
		<item name="cornerFamily">rounded</item>
		<item name="cornerSize">5dp</item>
	</style>

	<style name="Theme.Eclipse.ShapeAppearance.Block">
		<item name="cornerSize">0dp</item>
	</style>

	<style name="Theme.Eclipse.Divider" parent="Widget.Material3.MaterialDivider">
		<item name="dividerColor">#14000000</item>
	</style>

	<style name="Profile.TitleLarge.Muted" parent="TextAppearance.Material3.TitleLarge">
		<item name="android:textColor">#80000000</item>
	</style>

</resources>
