<resources>
	
	<style name="Primary" parent="Theme.Material3.DayNight">
		<item name="android:statusBarColor">@color/eclipse_primary</item>
		<item name="android:navigationBarColor">@color/eclipse_primary</item>
		<item name="actionBarStyle">@style/ActionBar</item>
		<item name="buttonStyle">@style/Button</item>
		<item name="dialogCornerRadius">28dp</item>
	</style>

	<style name="Secondary" parent="Theme.Material3.DayNight.NoActionBar">
		<item name="android:statusBarColor">@color/eclipse_primary</item>
		<item name="android:navigationBarColor">@color/eclipse_gray</item>
		<item name="toolbarStyle">@style/Toolbar</item>
		<item name="buttonStyle">@style/Button</item>
		<item name="bottomNavigationStyle">@style/BottomNavigation</item>
	</style>

	<style name="Splash" parent="Secondary">
		<item name="android:windowBackground">@drawable/splash_screen</item>
	</style>

	<style name="ActionBar" parent="Widget.Material3.ActionBar.Solid">
		<item name="background">@color/eclipse_primary</item>
		<item name="homeAsUpIndicator">@drawable/ic_arrow_back_white_24dp</item>
		<item name="titleTextStyle">@style/ActionBar.TitleTextStyle</item>
	</style>

	<style name="ActionBar.TitleTextStyle" parent="@style/TextAppearance.Material3.ActionBar.Title">
		<item name="android:textColor">@android:color/white</item>
	</style>
	
	<style name="Toolbar" parent="Widget.Material3.Toolbar">
		<item name="android:background">@color/eclipse_primary</item>
		<item name="navigationIcon">@drawable/ic_close_black_24dp</item>
		<item name="navigationIconTint">@android:color/white</item>
		<item name="titleTextColor">@android:color/white</item>
	</style>

	<style name="BottomNavigation" parent="Widget.Material3.BottomNavigationView">
		<item name="android:background">@color/eclipse_gray</item>
		<item name="itemTextColor">#fff</item>
		<item name="itemIconTint">#fff</item>
		<item name="itemActiveIndicatorStyle">@style/BottomNavigation.Indicator</item>
		<item name="labelVisibilityMode">selected</item>
	</style>

	<style name="Button" parent="Widget.Material3.Button">
		<item name="android:backgroundTint">@color/eclipse_primary</item>
		<item name="android:textColor">#fff</item>
		<item name="shapeAppearanceOverlay">@style/ShapeAppearance</item>
	</style>

	<style name="TextButton" parent="Widget.Material3.Button.TextButton">
		<item name="shapeAppearanceOverlay">@style/ShapeAppearance</item>
	</style>

	<style name="BlockButton" parent="Widget.Material3.Button.TextButton">
		<item name="android:height">56dp</item>
		<item name="android:insetTop">0dp</item>
		<item name="android:insetBottom">0dp</item>
		<item name="shapeAppearanceOverlay">@style/BlockShapeAppearance</item>
	</style>

	<style name="ShapeAppearance">
		<item name="cornerFamily">rounded</item>
		<item name="cornerSize">5dp</item>
	</style>

	<style name="BlockShapeAppearance">
		<item name="cornerSize">0dp</item>
	</style>

	<style name="BottomNavigation.Indicator" parent="Widget.Material3.BottomNavigationView.ActiveIndicator">
		<item name="android:color">@color/eclipse_secondary</item>
	</style>

</resources>
